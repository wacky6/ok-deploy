# apt-mirror config for repo mirror servers
# Use https://github.com/electricworry/apt-mirror.git to support CNF

set mirror_path  /mirrors/deb-repo/mirror
set var_path     /var/apt-mirror/var
set skel_path    /var/apt-mirror/skel
set nthreads     4
set defaultarch  amd64
set _tilde 0

# BEGIN: Mirrored DEB repos

# OS repo
deb https://archive.ubuntu.com/ubuntu noble main universe multiverse
deb https://archive.ubuntu.com/ubuntu noble-updates main universe multiverse
deb https://archive.ubuntu.com/ubuntu noble-backports main universe multiverse
deb https://archive.ubuntu.com/ubuntu noble-security main universe multiverse
deb [arch=i386] https://archive.ubuntu.com/ubuntu noble main universe multiverse
deb [arch=i386] https://archive.ubuntu.com/ubuntu noble-updates main universe multiverse
deb [arch=i386] https://archive.ubuntu.com/ubuntu noble-backports main universe multiverse
deb [arch=i386] https://archive.ubuntu.com/ubuntu noble-security main universe multiverse
clean https://archive.ubuntu.com/ubuntu

# NVIDIA CUDA
deb https://developer.download.nvidia.com/compute/cuda/repos/ubuntu2204/x86_64 /
clean https://developer.download.nvidia.com/compute/cuda/repos/ubuntu2204/x86_64
deb https://developer.download.nvidia.com/compute/cuda/repos/ubuntu2404/x86_64 /
clean https://developer.download.nvidia.com/compute/cuda/repos/ubuntu2404/x86_64

# Nginx
deb https://nginx.org/packages/mainline/ubuntu noble nginx
clean https://nginx.org/packages/mainline/ubuntu

# Docker
deb https://download.docker.com/linux/ubuntu jammy stable
deb https://download.docker.com/linux/ubuntu noble stable
clean https://download.docker.com/linux/ubuntu
